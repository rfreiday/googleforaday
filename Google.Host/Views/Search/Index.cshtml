@model Google.SearchEngine.Model.SearchRequest

<div id="body" class="container">
    <section class="content-wrapper main-content clear-fix">
        <div class="col-md-12 text-center">
            <img src="~/Images/googlelogo.png" alt="Google"/>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row" style="margin: 10px">
                    <b>@Html.TextBoxFor(model => model.RequestValue, new { @class="input" })</b>
                </div>
                <div class="row">
                    <div class="row">
                        <input class="btn btn-success btn-md" type="submit" name="GoogleSearch" id="GoogleSearch" value="Google Search" />
                    </div>
                </div>
            }
        </div>
    </section>
</div>